{% extends 'base.html.twig' %}

{% block title %}Marvel Character List{% endblock %}

{% block body %}
<style>

</style>

{% include 'nav.html.twig' %}
<div class="wrapper">

  <div class="row">
    <div class="columns text-center">
      <h2 style="border-bottom: 1px solid #eeeeee; margin-bottom: 15px; ">Marvel API: Character List</h2>
    </div>
  </div>

  <div class="row">
    {% for character in characters %}
        <div class="columns medium-2" style="float: left;">
          <a href="/characters/{{ character['id'] }}">
            <div class="card" style="height: 200px;">
              <div class="card-divider">
                {{ character['name'] }}
              </div>
              <img src="{{ character['thumbnail']['path'] }}.{{ character['thumbnail']['extension'] }}">
              {# <div class="card-section">
                <p>{{ character['description'] }}</p>
              </div> #}
            </div>
          </a>
        </div>
    {% else %}
        <div class="columns medium-8 medium-offset-2 text-center">
          <h3 class="subheader">Loading Characters..</h3>
        </div>
    {% endfor %}
  </div>

</div> <!-- ./container -->
{% endblock %}
