{% extends 'base.html.twig' %}

{% block title %}Marvel API - Login{% endblock %}

{% block body %}
<style>

</style>

<div class="wrapper">

  <div class="row">
    <div class="columns text-center">
      <h2 style="border-bottom: 1px solid #eeeeee; margin-bottom: 15px; ">Marvel API: Login</h2>
    </div>
  </div>

  <div class="row">
    <div class="columns medium-6 medium-offset-3">
      {% if error %}
          <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      <form action="{{ path('login') }}" method="post" class="form">
          <label for="username">Username:</label>
          <input type="text" id="username" name="_username" value="{{ last_username }}" />

          <label for="password">Password:</label>
          <input type="password" id="password" name="_password" />

          <button type="submit" class="button hollow">login</button>
          <a href="/register" class="button hollow secondary float-right">register</a>
      </form>
    </div>
  </div>

</div> <!-- ./container -->
{% endblock %}
